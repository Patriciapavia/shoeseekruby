<!DOCTYPE html>
<html>
  <head>
    <title>Shoeseek</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "View All", root_path, class: "navbar-brand" %>
        </div>
        <ul class="nav navbar-nav">
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <% if user_signed_in? %>
          <li><%=link_to "Sign out", destroy_user_session_path, method: :delete  %></li>
          <%else %>
          <li><%= link_to "Sign In",new_user_session_path %></li>
          <% end %>
        </ul>
         <ul class="nav nav-bar navbar-right">
          <% if user_signed_in? %>
          <li><%= link_to "Add Shoes", new_shops_path%></li>
          <li> 

          </li>


   
 
          <ul class="nav nav-bar navbar-right">
          <li class="dropdown">
              <a href="" class="dropdown-toggle"data-toggle="dropdown" role="button" arias-expanded="false">Categories<span class="caret"></span></a>
             <ul class="" role="menu">
                 <% Category.all.each do |category| %>
                <li class="<%'active' if params[:category ] == category.name%>">
                  <%= link_to category.name, shops_path(category: category.name), class: "link"%>
               </li>
              <% end %>
            </ul>
          </li>
        </ul>
 


          <% end %>
           
         </ul>
      </div>
      
    </nav>


    <p class="notice"><%= notice %></p>
     <p class="alert"><%= alert %></p>

    <%= yield %>
  </body>
</html>
